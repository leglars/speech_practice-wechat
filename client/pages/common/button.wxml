<template name="activeButton">
    <button type="primary"
            size="mini">去完成</button>
</template>

<template name="disabledWarningButton">
    <button type="warn"
            size="mini"
            disabled="true">未按时</button>
</template>

<template name="activeButtonLarge">
    <button type="primary"
            size="default"
            loading="{{data.loading}}">{{data.label}}</button>
</template>

<template name="returnButton">
    <button type="default"
            size="default">返回</button>
</template>